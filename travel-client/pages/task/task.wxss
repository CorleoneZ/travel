}

.weui-footer {
  margin: 50rpx 0;
}

.weui-center {
  text-align: center;
}

.border-shadow {
  border: 1px #dee1e8 solid;
  border-radius: 15rpx;
  box-shadow: 0 10rpx 35rpx #dee1e8;
}

.border-shadow .weui-panel__hd {
  padding: 15rpx 30rpx 15rpx;
  font-size: 15px;
  color: #333;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.weui-panel__hd {
  color: #333;
  font-size: 15px;
  padding: 10px 15px;
}

.weui-panel__hd:after {
  left: 0px;
}

.border-shadow .weui-media-box__info {
  margin-top: 0;
  padding-bottom: 0;
}

.border-shadow .weui-media-box {
  padding: 30rpx;
}

.border-shadow .weui-media-box__hd_in-appmsg {
  font-size: 80rpx;
  font-weight: bolder;
  color: #43b0d1;
  width:60px;
  height:60px;
  line-height:60px;
  text-align:center
}

.border-shadow .weui-media-box__thumb {
  height: 48px;
  width: 48px;
}

.weui-grid {
  padding: 10px 10px;
  color: #333;
  width: 25%;
}

.weui-grid__icon {
  width: 81rpx;
  height: 81rpx;
}

.weui-panel:before, .weui-panel:after, .weui-grids, .weui-grid {
  border: 0;
}

.weui-media-box__desc {
  display: inherit;
  line-height: 1.8;
  color: #555;
}

button[type="primary"][plain] {
  color: #fff;
  border: 1px solid #96deda;
  background-image: linear-gradient(-45deg, #96deda 0%, #8ec5fc 100%);
}

