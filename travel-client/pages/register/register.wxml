<!--pages/register/register.wxml-->

<view class="page">
  <view class="page__bd">
<view class="weui-cells__title center">请注册</view>
        <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">用户名</view>
              </view>
              <view class="weui-cell__bd">
                <input class="weui-input" name="name"  bindinput="nameInput" value='{{name}}' placeholder="请输入账户" />
              </view>
            </view>
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">密码</view>
              </view>
              <view class="weui-cell__bd">
                <input type='password' class="weui-input" placeholder="请输入密码"  name="password" password value='{{password}}'  bindinput="passwordInput" />
              </view>
            </view>
            
              <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">邮箱</view>
              </view>
              <view class="weui-cell__bd">
                <input type='text' class="weui-input" name="email"  bindinput="emailInput" value='{{email}}' placeholder="请输入邮箱" />
              </view>
            </view>
            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">态度</view>
                </view>
                <view class="weui-cell__bd">
                    <input type='text' class="weui-input" name="title"  bindinput="titleInput" value='{{title}}' placeholder="请输入态度" />
                </view>
                <view class="weui-cell__ft">
                   
                </view>
            </view>

            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">爱好</view>
                </view>
                <view class="weui-cell__bd">
                    <input type='text' class="weui-input" name="hobby"  bindinput="hobbyInput" value='{{hobby}}' placeholder="请输入爱好" />
                </view>
                <view class="weui-cell__ft">
                   
                </view>
            </view>
          </view>
          
           <view class="weui-btn-area">
              <button class="weui-btn" type="primary" bindtap="reg">注册</button>
              <button class="weui-btn" type="private" bindtap="todenglu">登录</button>
            </view>
        </view>

     </view>
