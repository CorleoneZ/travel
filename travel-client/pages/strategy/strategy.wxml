<view class="page__hd">
    <view class="page__title center">城市攻略</view>
</view>
<view class="page">
  <view class="page__bd">
    <view class="weui-cells weui-cells_after-title">            
      <view class="weui-cell weui-cell_input">
        <view class="weui-cell__hd">
          <view class="weui-label">城市</view>
        </view>
        <view class="weui-cell__bd">
          <input type='text' class="weui-input" name="name"  bindinput="nameInput" value='{{name}}' placeholder="请输入城市名称" />
        </view>         
      </view>
    </view>
          
    <view class="weui-btn-area">
       <button class="weui-btn" type="private" bindtap="search">搜索</button>
    </view>
  </view>
</view>


<view class="page__hd">
      <view class="page__title center">热门城市旅游攻略</view>

      <view class="weui-article__p weui-panel__hd" wx:for='{{newsdetail}}'>
        <view class="page__bd page__bd_spacing">
              <view class="page__desc center">
                <view class="page__title">
                  {{item.Name}}
                </view>   
                <view class="page__desc">
                  {{item.Strategy}} 
                </view>  
                <view class="page__desc">
                  {{item.foods}} 
                </view>  
              </view>    
        </view>
      </view>
  </view>



