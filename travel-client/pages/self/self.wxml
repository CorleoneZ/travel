<!--pages/register/register.wxml-->

<view class="page">
  <view class="page__bd">
<view class="weui-cells__title center">用户信息</view>
        <view class="weui-cells weui-cells_after-title">

            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">用户名</view>
              </view>
              <view class="weui-cell__bd">
                <input type='text' class="weui-input" name="name"  bindinput="nameInput" value='{{name}}' placeholder="账户" />
              </view>
            </view>
            
            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">邮箱</view>
              </view>
              <view class="weui-cell__bd">
                <input type='text' class="weui-input" name="email"  bindinput="emailInput" value='{{email}}' placeholder="邮箱" />
              </view>
            </view>

            <view class="weui-cell weui-cell_input">
              <view class="weui-cell__hd">
                <view class="weui-label">态度</view>
              </view>
              <view class="weui-cell__bd">
                <input type='text' class="weui-input" name="title"  bindinput="titleInput" value='{{title}}' placeholder="态度" />
              </view>
            </view>

            <view class="weui-cell weui-cell_input weui-cell_vcode">
                <view class="weui-cell__hd">
                    <view class="weui-label">爱好</view>
                </view>
                <view class="weui-cell__bd">
                    <input type='text' class="weui-input" name="hobby"  bindinput="hobbyInput" value='{{hobby}}' placeholder="爱好" />
                </view>
              <view class="weui-cell__ft">
                   
              </view>
            </view>
          </view>
          
           <view class="weui-btn-area">
              <button class="weui-btn" type="primary" bindtap="todenglu">退出系统</button>
            </view>
        </view>
     </view>
