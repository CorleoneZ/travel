<!--index.wxml-->
<swiper
  indicator-dots="{{indicatorDots}}"
  autoplay="true"
  interval="3000"
  duration="300"
>
  <block wx:for="{{imgUrls}}">
    <swiper-item>
      <image src="{{item}}" class="slide-image" />
    </swiper-item>
  </block>
</swiper>

<!-- nav  导航菜单-->
<view class='nav'>  
  <view bindtap='tolunwen'>
    <view><image src='{{new}}'></image></view>
    <view>论文著作</view>
  </view>
  <view bindtap='photo'>
    <view><image src='{{photo}}'></image></view>
    <view>样片赏析</view>
  </view>
  <view bindtap='home'>
    <view><image src='{{home}}'></image></view>
    <view>门店介绍</view>
  </view>
  <view>
    <view bindtap='youhui'><image src='{{messages}}'></image></view>
    <view>我的优惠</view>
  </view>
</view>


<view class="weui-panel weui-panel_access">
  <view class="weui-panel__hd">最新论文著作</view>
  <view class="weui-panel__bd " wx:for="{{newslist}}" wx:if='{{index<2}}'>
   <view class="weui-panel__hd weui-panel_access">
    <navigator url="../lunwendetail/lunwendetail?id={{item.id}}" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
      <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
        <view class="weui-media-box__title left">{{item.name}}</view>
        <view class="weui-media-box__desc">{{item.content}}</view>
      </view>
    </navigator>
     </view>
  </view>
      <navigator open-type='switchTab' url="../lunwen/lunwen">
      <view class="weui-cell weui-cell_access weui-cell_link">
      <text class="weui-cell__bd">查看更多</text>
       <view class="weui-cell__ft weui-cell__ft_in-access"></view>          
       </view>
       </navigator>
</view>